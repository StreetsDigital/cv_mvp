# Required API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
APP_NAME=CV Automation MVP
DEBUG=false
LOG_LEVEL=INFO
# CORS_ORIGINS=https://recruitment.automateengage.com,http://localhost:3000
PREMIUM_CONTACT_EMAIL=andrew@automateengage.com

# Enhanced CV Processing Settings
ENABLE_ENHANCED_PROCESSING=true
ENHANCED_PROCESSING_TIMEOUT=60
CLAUDE_MODEL=claude-3-sonnet-20240229
MAX_CV_LENGTH=50000
MAX_JOB_DESCRIPTION_LENGTH=10000

# Enhanced Scoring Weights (Digital Media Focus)
PLATFORM_EXPERTISE_WEIGHT=0.20
CAMPAIGN_PERFORMANCE_WEIGHT=0.15
CREATIVE_SKILLS_WEIGHT=0.12
ANALYTICS_SKILLS_WEIGHT=0.13
SEO_SEM_WEIGHT=0.08
MARTECH_OPERATIONS_WEIGHT=0.08
ADVANCED_ANALYTICS_WEIGHT=0.07
INDUSTRY_SPECIALIZATION_WEIGHT=0.05
PLATFORM_LEADERSHIP_WEIGHT=0.04
SALES_MARKETING_INTEGRATION_WEIGHT=0.03
REMOTE_WORK_CAPABILITY_WEIGHT=0.03
EXECUTIVE_PRESENCE_WEIGHT=0.02

# Performance Settings
ENABLE_SKILL_CACHING=true
CACHE_EXPIRY_HOURS=24

# Security
SECRET_KEY=your-secret-key-change-in-production

# Chat Settings
MAX_MESSAGE_LENGTH=4000
MAX_FILE_SIZE_MB=5
# ALLOWED_FILE_TYPES=pdf,docx,txt

# Feature Flags (MVP Limitations)
ENABLE_VECTOR_STORAGE=false
ENABLE_EMAIL_INTEGRATION=false
ENABLE_LINKEDIN_INTEGRATION=false
ENABLE_ANALYTICS=false
ENABLE_WORKFLOW_PERSISTENCE=false